{
  "compilerOptions": {
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    // "outDir": "lib",
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "esnext",
    "lib": ["esnext", "DOM", "DOM.Iterable"],
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "build",
    "strict": true,
    "rootDir": "src",
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    // we set this to false because of TypeORM entity decorators
    "strictPropertyInitialization": false,
    "removeComments": true
  },
  "compileOnSave": true,
  "include": ["src/**/*"],
  "exclude": ["node_modules", "build", "dist", "scripts", "tests"]
}
